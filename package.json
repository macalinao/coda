{
  "name": "@macalinao/coda-monorepo",
  "private": true,
  "type": "module",
  "license": "Apache-2.0",
  "author": "Ian Macalinao <me@ianm.com>",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "clients/*"
    ],
    "catalog": {
      "eslint": "^9.35.0",
      "typescript": "^5.9.2",
      "@macalinao/eslint-config": "^6",
      "@macalinao/tsconfig": "^3.2.3",
      "@solana/kit": "^3",
      "@types/bun": "^1.2.20",
      "codama": "^1.3.7",
      "@codama/nodes": "^1.3.7",
      "@codama/nodes-from-anchor": "^1.2.9",
      "@codama/renderers-core": "^1.2.2",
      "@codama/visitors-core": "^1.3.7"
    }
  },
  "scripts": {
    "build": "turbo build",
    "build:ci": "turbo build --filter='./{packages,clients}/**'",
    "build:packages": "turbo build --filter='./packages/**'",
    "build:watch": "turbo watch build",
    "build:watch:packages": "turbo watch build --filter='./packages/**'",
    "lint": "biome check && turbo run lint",
    "lint:fix": "biome check --write --no-errors-on-unmatched --unsafe && turbo run lint -- --fix",
    "clean": "turbo run clean",
    "test": "CI=true turbo run test",
    "watch": "turbo watch build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "ci:version": "changeset version && bun update",
    "ci:publish": "./scripts/ci-publish.sh",
    "prepare": "husky",
    "codegen": "turbo run codegen",
    "docs:dev": "turbo dev --filter=coda-docs",
    "docs:build": "turbo build --filter=coda-docs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@changesets/cli": "^2.29.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "turbo": "^2.5.6"
  },
  "packageManager": "bun@1.2.21",
  "lint-staged": {
    "*.{json,jsonc,html}": "biome format --write --no-errors-on-unmatched"
  },
  "overrides": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
