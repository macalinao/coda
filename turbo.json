{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_AUTH_TOKEN"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["./dist/**", "./.next/**"],
      "env": ["NODE_ENV"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test:run": {
      "dependsOn": ["build"],
      "cache": false
    },
    "codegen": {
      "outputs": ["./src/generated/**"],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
